datasource eventsDb {
  provider = "postgresql"
  url      = env("EVENTS_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../../prisma/generated/events"
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  date        DateTime
  location    String
  category    String
  capacity    Int
  status      String   @default("draft")
  price       Float?   @default(0)
  organizerId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([status])
  @@index([date])
  @@index([organizerId])
}

