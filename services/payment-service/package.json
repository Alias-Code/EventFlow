{
  "name": "payment-service",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "ts-node src/main.ts",
    "build": "tsc -p tsconfig.json",
    "generate:payments": "prisma generate --schema ../../prisma/payments/schema.prisma",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.0",
    "@nestjs/core": "^10.4.0",
    "@nestjs/platform-express": "^10.4.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/config": "^3.2.0",
    "@nestjs/swagger": "^7.3.0",
    "@prisma/client": "^6.19.0",
    "amqplib": "^0.10.9",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1"
  },
  "devDependencies": {
    "prisma": "^6.19.0",
    "@types/amqplib": "^0.10.6",
    "@types/passport-jwt": "^4.0.1",
    "@types/node": "^20.0.0",
    "typescript": "^5.6.3",
    "@nestjs/testing": "^10.4.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.2"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": ["ts-jest", { "tsconfig": { "strict": false, "strictPropertyInitialization": false } }]
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^.*/prisma/generated/payments$": "<rootDir>/__mocks__/prisma-payments.ts",
      "^../../../prisma/generated/payments$": "<rootDir>/__mocks__/prisma-payments.ts",
      "^../../../../prisma/generated/payments$": "<rootDir>/__mocks__/prisma-payments.ts",
      "^../rabbit/rabbit.service$": "<rootDir>/__mocks__/rabbit.service.ts",
      "^../prisma/prisma.service$": "<rootDir>/__mocks__/prisma.service.ts"
    }
  }
}
